<script>
function hideAllCalendars(){
	for (var i = 0; i < {{len(calendars)}}; ++i){
		var id = '#cal' + i;
		var id2 = '#cal' + i;
		$(id).hide();
		$(id2).hide();
	}
}

$(document).ready(function() {
	hideAllCalendars();
	$('#cal0').show();
	$('#cal0').show();

	%for i in range(len(calendars)):
		$('#button{{i}}').click(function(){
			hideAllCalendars()
			$('#cal{{i}}').show();
			$('#cal{{i}}').show();
		});
	%end
});
</script>

